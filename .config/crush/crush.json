{
  "$schema": "https://charm.land/crush.json",
  "permissions": {
    "allowed_tools": [
      "view",
      "grep",
      "rg",
      "ls",
      "curl"
    ]
  },
  "options": {
    "context_paths": [
      "AGENTS.md",
      ".cursorrules"
    ]
  },
  "mcp": {
    "code-index": {
      "type": "stdio",
      "command": "uvx",
      "args": ["code-index-mcp"]
    },
    "deepwiki": {
      "type": "http",
      "url": "https://mcp.deepwiki.com/mcp"
    }
  },

  "providers": {
    "ollama": {
      "name": "Ollama",
      "base_url": "http://localhost:11434/v1/",
      "type": "openai",
      "models": [
        {
          "name": "Qwen 3 8b",
          "id": "qwen3:8b",
          "context_window": 256000,
          "default_max_tokens": 20000
        },
        {
          "name": "Llama 3.2",
          "id": "llama3.2:latest",
          "context_window": 256000,
          "default_max_tokens": 20000
        },
        {
          "name": "Deepseek R1 8b",
          "id": "deepseek-r1:8b",
          "context_window": 256000,
          "default_max_tokens": 20000
        }
      ]
    }
  }
}
